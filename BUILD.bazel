filegroup(
    name = "package-srcs",
    srcs = glob(
        ["**"],
        exclude = [
            "bazel-*/**",
            ".git/**",
            "venv/**",
        ]
    ),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//experiments:all-srcs",
        "//python_test:all-srcs"
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)